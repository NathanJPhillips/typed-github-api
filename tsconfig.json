{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "lib": [ "es2017" ],
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
